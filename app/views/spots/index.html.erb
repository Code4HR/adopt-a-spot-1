<h1>Adopt-A-Spot Locations</h1>
<p>Easier way to find Adopt-A-Spot locations</p>

<!-- Panel listing -->
<div class="container">
  <div class="row">
  <% @spots.each do |spot| %>
    <div class="col-md-6">
      <%= link_to spot do %>
        <%= image_tag('Placeholder.jpg', :class => "img-responsive", :id => "spot_picture") %>
      <% end %>
      <div id="spot_name_address">
        <%= spot.name %> <br/>
        <%= spot.add1 %> <%= spot.city %>, <%= spot.state %> <%= spot.zipcode %>
      </div>
      <br/>
    </div>
  <% end %>
  </div>
</div>

  <!-- Panel Listing Navigation -->
  <div class="pagination">
    <ul>
      <li><a href="#">←</a></li>
      <li class="active"><a href="#">1</a></li>
      <li class="disabled"><a href="#">...</a></li>
      <li><a href="#">20</a></li>
      <li><a href="#">→</a></li>
    </ul>
  </div>

</div>




